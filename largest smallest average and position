numbers = []

for _ in range(5):
    num = float(input("Type a number: "))
    numbers.append(num)

largest = max(numbers)

position = numbers.index(largest) + 1

smallest = min(numbers)
average = sum(numbers) / len(numbers)

print("\nNumbers you typed", numbers)
print(f"This largest number is: {largest} at index {position} ")
print(f"This the smallest number is: {smallest} ")
print(f"This the average number is: {average}")